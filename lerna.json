{
  "changelog": {
    "labels": {
      "pr(enhancement)": ":rocket: Enhancement",
      "pr(bug)": ":bug: Bug Fix",
      "pr(documentation)": ":book: Documentation",
      "pr(dependency)": ":deciduous_tree: Dependency",
      "pr(chore)": ":turtle: Chore"
    },
    "repo": "umijs/father",
    "cacheDir": ".changelog"
  },
  "packages": [
    "packages/*",
    "demo"
  ],
  "command": {
    "version": {
      "exact": true
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "publish": {
    "registry": "https://registry.npmjs.org"
  }
}